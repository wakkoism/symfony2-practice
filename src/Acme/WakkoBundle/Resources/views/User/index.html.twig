{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Updated</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('wakko_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.roles|join(', ') }}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('M d, Y h:i a') }}{% endif %}</td>
                <td>{{ entity.status ? 'Active' : 'Disabled' }}</td>
                <td>{% if entity.created %}{{ entity.created|date('M d, Y h:i a') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('wakko_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('wakko_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('wakko_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
